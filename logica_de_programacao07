int[] vetor = new int[] { 1, 2, 3, 4, 5 };
            int conti = 0;
            for (int i = 0; i < vetor.Length-1; i++)
            {
                int[] vetorNovo = new int[conti];
                if (vetor[i] % 2 != 1)
                {
                    vetorNovo[0] = vetor[0];
                    conti++;
                }
                
                //Console.WriteLine(vetorNovo);
            }
